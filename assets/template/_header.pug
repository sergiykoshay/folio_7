.container-fluid
   .row.nav-box
        .container
            .row.no-gutters
                .col-lg-6.col-xs-12
                    ul.nav
                        each val, index in ['О компании', 'Новости', 'Галерея', 'Отзывы', 'Контакты']
                            li.nav-item
                                a(href = '#').nav-link
                                    = val
                .col-lg-4.col-xs-12
                    ul.contact
                        li.contact-item  +38 (067) 250-49-39
                        li.contact-item kari-san@ukr.net
                .col-lg-1.col-xs-6
                    .custom-select
                        select#lang(name="lang")
                            option(value="0") UA
                            option(value="1") RU

                .col-lg-1.col-xs-6
                    .custom-select
                        select#curr(name="curr")
                            option(value="12") UAH
                            option(value="13") USD
                            option(value="13") EUR
.container
    .row
        .col-lg-2
            .logo
                img(src="img/logo-kari-san.jpg", alt="Kari-san", srcset="img/logo-kari-san@2x.jpg 800w, img/logo-kari-san@3x.jpg 1200w")
        .col-lg-10
            .row.no-gutter
                .col-md-9
                    form(action="", method="get").search
                        input#search(type="text", name="search", placeholder="Что вы ищете?").search__field
                        button(type="submit").search__submit
                            i(aria-hidden="true").fa.fa-2x.fa-search
                .col-md-3
                    .user
                        a(href="#")
                            i(aria-hidden="true").fa.fa-3x.fa-heart
                            span.num 3
                        a(href="#")
                            i(aria-hidden="true").fa.fa-3x.fa-shopping-cart
                            span.num 4
                        a(href="#")
                            i(aria-hidden="true").fa.fa-3x.fa-user
            .row
                .col-lg-12.col-md-12
                    hr.nav-hr
            .row
                .col-md-12
                    ul.cat
                        each cat in ["постельное белье", "полотенца", "одеяла", "наматрасники", "покрывала" , "подушки" ]
                            li.cat-item
                                a(href="#")
                                    = cat
